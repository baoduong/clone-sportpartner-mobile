<div class="panel-conversation equalHeight">
    <div class="header-conversation">
        <div class="d-flex">
            <h3 class="name m-0">Conversation with Charlotte
            </h3>
        </div>
    </div>
    <div class="body-conversation">
        <div class="content">
            {{# conversations }}
            <div class="history-time">{{time}}</div>
                {{# content}} 
                {{#you}}
                <div class="you-talk">
                    <div class="avatar"></div>
                    <div class="message">{{you}}</div>
                </div>
                {{/you}} 
                {{#me}}
                <div class="me-talk">
                    <div class="avatar"></div>
                    <div class="message">{{me}}</div>
                </div>
                {{/me}} 
                {{/ content}} 
            {{/ conversations }}
        </div>
    </div>
    <div class="footer-conversation bg-white-f8">
        <div class="talk-block">
            <button style="max-width: 570px; margin: 0 auto;" class="btn font-size-16 black-two btn-block" type="button">Restore message</button>
        </div>
    </div>
</div>